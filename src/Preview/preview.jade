html
    head
        title #{questionPaper.title}
        link(rel="stylesheet" type="text/css" href="./Preview/preview.css")
        script(src="../js/jquery-1.7.2.js")
        script(src="../js/shortcut.js")
        script(src='./Preview/preview.js' type='text/javascript')
    body(class='paperContent')
        h1(class="questionPaperTitle") #{questionPaper.title}
        ol
            each question,index in questionPaper.questions
                div(class="note") !{question.note}
                li !{question.question.replace('<code>','<pre><code>').replace('</code>','</pre></code>')}