link(rel="stylesheet" type="text/css" href="./createQuestionPaper/questionToSelect.css")
div(id='questionDetailHolder')
    div(id='tagsInQuestionHandler')
        each tag in tags
            div(class="label label-default tagLabel") #{tag}
    div(id='questionContentHandler')
        | !{question.replace('<code>','<pre><code>').replace('</code>','</pre></code>')}
    if(answer.trim().length != 0)
        div(id='answerHandler')
            p #{answer}